	show-icons: true;
    kb-row-left: "Control+h";
    kb-row-right: "Control+l";
    kb-row-down: "Control+j,Control+n";
    kb-row-up: "Control+k,Control+p";
    kb-remove-to-eol: "";
	kb-remove-char-back: "BackSpace,Shift+BackSpace";
	kb-accept-entry: "Control+s,Return";
